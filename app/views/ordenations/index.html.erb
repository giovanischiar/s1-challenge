<%- model_class = Ordenation -%>
<div class="page-header">
  <h1><%=t '.title', :default => "#{model_class.model_name.human.pluralize.titleize} of configuration #{@configuration.label}" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:priority) %></th>
      <th><%= model_class.human_attribute_name(:field) %></th>
      <th><%= model_class.human_attribute_name(:direction) %></th>
      <th><%= model_class.human_attribute_name(:configuration_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @configuration.ordenations.each do |ordenation| %>
      <tr>
        <td><%= link_to ordenation.id, configuration_ordenation_path(@configuration, ordenation) %></td>
        <td><%= ordenation.priority %></td>
        <td><%= ordenation.field %></td>
        <td><%= ordenation.direction %></td>
        <td><%= ordenation.configuration_id %></td>
        <td><%=l ordenation.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      configuration_ordenation_path(@configuration, ordenation), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_configuration_ordenation_path(@configuration, ordenation), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      configuration_ordenation_path(@configuration, ordenation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to t('.back', :default => t("helpers.links.back")),
            url_for(:back), :class => 'btn btn-default' %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_configuration_ordenation_path(@configuration),
            :class => 'btn btn-primary' %>