<%- model_class = Ordenation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:priority) %>:</strong></dt>
  <dd><%= @ordenation.priority %></dd>
  <dt><strong><%= model_class.human_attribute_name(:field) %>:</strong></dt>
  <dd><%= @ordenation.field %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direction) %>:</strong></dt>
  <dd><%= @ordenation.direction %></dd>
  <dt><strong><%= model_class.human_attribute_name(:configuration_id) %>:</strong></dt>
  <dd><%= @ordenation.configuration_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              configuration_ordenations_path(@configuration), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_configuration_ordenation_path(@configuration, @ordenation), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              configuration_ordenation_path(@configuration, @ordenation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
