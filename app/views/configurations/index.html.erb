<%- model_class = Configuration -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:label) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:ordenations) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @configurations.each do |configuration| %>
      <tr>
        <td><%= link_to configuration.id, configuration_path(configuration) %></td>
        <td><%= configuration.label %></td>
        <td><%=l configuration.created_at %></td>
        <td><%= link_to 'Ordenations', configuration_ordenations_path(configuration), :class => 'btn btn-default btn-xs' %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      configuration_path(configuration), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_configuration_path(configuration), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      configuration_path(configuration),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.back', :default => t("helpers.links.back")),
            url_for(:back), :class => 'btn btn-default' %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_configuration_path,
            :class => 'btn btn-primary' %>
