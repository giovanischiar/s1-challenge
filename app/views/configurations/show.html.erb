<%- model_class = Configuration -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:label) %>:</strong></dt>
  <dd><%= @configuration.label %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong>Ordenations:</strong></dt>
  <dd><%= link_to t('.ordenations', :default => t("helpers.configuration.ordenations")),
              configuration_ordenations_path(@configuration), :class => 'btn btn-default'  %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              configurations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_configuration_path(@configuration), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              configuration_path(@configuration),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
